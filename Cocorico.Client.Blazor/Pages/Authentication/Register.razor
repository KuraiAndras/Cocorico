@page "/register"

@using Cocorico.Client.Domain.ViewModels.Authentication

@layout MainLayout

@inject IRegisterViewModel UserRegisterViewModel

<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                @if (UserRegisterViewModel.ShowRegisterFailed)
                {
                    <div class="alert alert-danger">
                        Login attempt failed.
                    </div>
                }
                <input type="text" @bind="@UserRegisterViewModel.UserRegisterDetails.Name" placeholder="John Doe" class="form-control" />
                <input type="text" @bind="@UserRegisterViewModel.UserRegisterDetails.Email" placeholder="example@host.org" class="form-control" />
                <input type="password" @bind="@UserRegisterViewModel.UserRegisterDetails.Password" placeholder="Password" class="form-control" />
                <button class="btn btn-primary" @onclick="@UserRegisterViewModel.RegisterUserAsync">Register</button>
            </div>
        </div>
    </div>
</div>
