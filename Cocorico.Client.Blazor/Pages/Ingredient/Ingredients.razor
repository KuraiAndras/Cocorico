@page "/Ingredients"

@using Cocorico.Client.Domain.ViewModels.Ingredient

@inject IIngredientsViewModel ViewModel

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredientDto in ViewModel.IngredientsList)
        {
            <tr>
                <td>@ingredientDto.Name</td>
                <td><button class="btn btn-secondary" @onclick="@(() => ViewModel.GoToEdit(ingredientDto.Id))">Edit</button></td>
                <td><button class="btn btn-danger" @onclick="@(async () => await ViewModel.DeleteAsync(ingredientDto.Id))">Delete</button></td>
            </tr>
        }
    </tbody>
</table>

@code
{
    protected override async Task OnInitializedAsync() => await ViewModel.LoadIngredientsAsync();
}