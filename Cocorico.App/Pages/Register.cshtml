@using Cocorico.Shared.Models
@using Microsoft.AspNetCore.Blazor.Services
@inject IUriHelper UriHelper
@page "/register"
@inject HttpClient HttpClient

<div class="container">
    <h1>Register to JWT Authentication!</h1>
    <div class="form-group">
        @* ReSharper disable once Html.IdNotResolved *@
        <label for="email">Email</label>
        <input type="text" name="email" placeholder="Email" class="form-control" bind="@Email" />
    </div>
    <div class="form-group">
        @* ReSharper disable once Html.IdNotResolved *@
        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" class="form-control" bind="@Password" />
    </div>
    <button onclick="@SubmitForm">Submit</button>
</div>

@functions
{

public string Email { get; set; } = "";
public string Password { get; set; } = "";

private async Task SubmitForm()
{
    var dto = new TokenDto
    {
        Email = Email,
        Password = Password,
    };

    await HttpClient.PostJsonAsync("http://localhost:51542/api/Token/Register", dto);

    UriHelper.NavigateTo("/login");
}
}
