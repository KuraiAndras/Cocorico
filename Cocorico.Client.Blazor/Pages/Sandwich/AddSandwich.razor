@page "/AddSandwich"

@using Cocorico.Client.Blazor.ComponentModels.Sandwich

@inherits AddSandwichModel

<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <input type="text" placeholder="Sandwich Name" class="form-control" bind="@NewSandwichDto.Name" />
            <input type="number" placeholder="Sandwich Price" class="form-control" bind="@NewSandwichDto.Price" />
            <button class="btn btn-primary" onclick="@Add">Add</button>
        </div>
    </div>
</div>