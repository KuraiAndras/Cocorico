@page "/users"

@using Cocorico.Client.Domain.ViewModels.User
@using Cocorico.Shared.Dtos.User

@inject IUsersViewModel ViewModel

@if (ViewModel.UsersList.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@nameof(UserForAdminPage.Name)</th>
                <th>@nameof(UserForAdminPage.Email)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewModel.UsersList)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td><button class="btn btn-primary" @onclick="@(() => ViewModel.GoToEdit(user.Id))">Edit</button></td>
                </tr>
            }
        </tbody>
    </table>
}

@code
{
    protected override Task OnInitializedAsync() => ViewModel.LoadUsersAsync();
}
